<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="navbar">
      <%= link_to image_tag("Prophet_Logo_White.png"), root_url , id: "logo" %>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
          <span class="sr-only">Toggle Navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li><%= link_to "Rankings", rankings_path %></li>
            <% if Date.today < current_season.post_season_end_date %>
              <% gamesdate = Date.today.strftime("%Y%m%d") %>
            <% else %>
              <% gamesdate = current_season.post_season_end_date.strftime("%Y%m%d") %>
            <% end %>
            <li><%= link_to "Schedule", games_path(date: gamesdate) %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Predictions <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "By Date", predictions_path(date: gamesdate) %></li>
                <li><%= link_to "Season Stats", predictions_statistics_path %></li>
                <li><%= link_to "Create Simulation", new_simulation_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Team Stats <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Shooting", team_shooting_path(season: current_year) %></li>
                <li><%= link_to "Rebounding", team_rebounding_path(season: current_year) %></li>
                <li><%= link_to "Defense", team_defense_path(season: current_year) %></li>
                <li><%= link_to "Miscellaneous", team_misc_path(season: current_year) %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Player Stats <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Advanced", player_advanced_path(season: current_year) %></li>
                <li><%= link_to "Shooting", player_shooting_path(season: current_year) %></li>
              </ul>
            </li>
            <% if current_user.admin? %>
              <li><%= link_to "Admin", admin_path %></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Log in", login_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>