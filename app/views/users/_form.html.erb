<%= form_for(@user) do |form| %>
  <%= render 'shared/error_messages' %>
  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: 'form-control', id: :user_first_name %>
  </div>
  
    <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: 'form-control', id: :user_last_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control', id: :user_email %>
  </div>
    
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control', id: :user_password %>
  </div>
  
  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: 'form-control', id: :user_password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit "Create my account", class: "btn btn-standard btn-wide" %>
  </div>
<% end %>
