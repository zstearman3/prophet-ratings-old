<% provide(:title, 'Player Shooting Stats') %>
<% year = params[:season].to_i %>
<%= link_to 'Previous Season', player_shooting_path(season: year - 1) %>
<%= link_to 'Next Season', player_shooting_path(season: year + 1), class: 'align-right' %>
<div class="row pagination-div">
  <%= will_paginate %>
</div>
<table class="table table-sm">
  <thead>
    <tr>
      <th><%= sort_link "prophet_rating", "Rank", "desc", year %></th>
      <th>Player</th>
      <th>Team</th>
      <th>FG%</th>
      <th>2P%</th>
      <th>3P%</th>
      <th>FT%</th>
      <th>EFG%</th>
      <th>TS%</th>
      <th>PER</th>
      <th>BPM</th>
      <th>pRATE</th>
    </tr>
  </thead>
  <tbody>
    <% if params[:page] %>
      <% x = (params[:page].to_i - 1) * 100 %>
    <% else %>
      <% x = 0 %>
    <% end %>
    <% @player_seasons.each do |season| %>
    <% x += 1 %>
      <tr>
        <td><%= x %></td>
        <td><%= link_to season.name, season.player %></td>
        <td><%= season.team.school %></td>
        <td><%= season.field_goals_percentage %></td>
        <td><%= season.two_pointers_percentage %></td>
        <td><%= season.three_pointers_percentage %></td>
        <td><%= season.free_throws_percentage %></td>
        <td><%= season.effective_field_goals_percentage %></td>
        <td><%= season.true_shooting_percentage %></td>
        <td><%= season.player_efficiency_rating %></td>
        <td><%= season.bpm %></td>
        <td><%= season.prophet_rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row pagination-div">
  <%= will_paginate %>
</div>
  